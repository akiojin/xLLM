#!/usr/bin/env sh
set -e

if [ "${HUSKY:-}" = "0" ]; then
  echo "HUSKY=0 is not allowed in this repo." >&2
  exit 1
fi

# Lint gate before pushing (only changed markdown)
bash .specify/scripts/checks/check-markdown.sh --range origin/develop..HEAD
bash .specify/scripts/checks/check-commits.sh --from origin/develop --to HEAD
